{
  "compilerOptions": {
    /* Base Options: */
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2022",

    /* Strictness */
    "checkJs": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,

    /* Bundled projects */
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "plugins": [{ "name": "next" }]
  }
}
